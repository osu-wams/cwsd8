+<?php
+
+namespace Drupal\bootstrap_layout_builder\Plugin\BootstrapStyles\Style;
+
+use Drupal\bootstrap_styles\Style\StylePluginBase;
+use Drupal\Core\Form\FormStateInterface;
+
+/**
+ * Style AlignItems class.
+ *
+ * @package Drupal\bootstrap_layout_builder\Plugin\Style
+ *
+ * @Style(
+ *   id = "align_items",
+ *   title = @Translation("Align Items"),
+ *   group_id = "positioning",
+ *   weight = 0
+ * )
+ */
+class AlignItems extends StylePluginBase {
+
+  /**
+   * {@inheritDoc}
+   */
+  public function buildConfigurationForm(array $form, FormStateInterface $form_state) {
+    $config = $this->config();
+
+    $form['positioning']['align_items'] = [
+      '#type' => 'textarea',
+      '#default_value' => $config->get('align_items'),
+      '#title' => $this->t('Align Items'),
+      '#cols' => 60,
+      '#rows' => 5,
+    ];
+
+    return $form;
+  }
+
+  /**
+   * {@inheritDoc}
+   */
+  public function submitConfigurationForm(array &$form, FormStateInterface $form_state) {
+    $this->config()
+      ->set('align_items', $form_state->getValue('align_items'))
+      ->save();
+  }
+
+  /**
+   * {@inheritDoc}
+   */
+  public function buildStyleFormElements(array &$form, FormStateInterface $form_state, $storage) {
+    $form['align_items'] = [
+      '#type' => 'radios',
+      '#title' => $this->t('Align Items'),
+      '#options' => $this->getStyleOptions('align_items'),
+      '#default_value' => $storage['align_items']['class'] ?? NULL,
+      '#validated' => TRUE,
+      '#attributes' => [
+        'class' => ['field-align-items', 'bs_input-boxes'],
+      ],
+    ];
+
+    // Add icons to the container types.
+    foreach ($form['align_items']['#options'] as $key => $value) {
+      $form['align_items']['#options'][$key] = '<span class="input-icon ' . $key . '"></span>' . $value;
+    }
+
+    return $form;
+  }
+
+  /**
+   * {@inheritDoc}
+   */
+  public function submitStyleFormElements(array $group_elements) {
+    return [
+      'align_items' => [
+        'class' => $group_elements['align_items'],
+      ],
+    ];
+  }
+
+  /**
+   * {@inheritDoc}
+   */
+  public function build(array $build, array $storage, $theme_wrapper = NULL) {
+    $classes = [];
+    if (isset($storage['align_items']['class'])) {
+      $classes[] = $storage['align_items']['class'];
+    }
+
+    // Add the classes to the build.
+    $build = $this->addClassesToBuild($build, $classes);
+
+    // Attach blb-classes to the build.
+    $build['#attached']['library'][] = 'bootstrap_layout_builder/plugin.align_items.build';
+
+    return $build;
+  }
+
+}
